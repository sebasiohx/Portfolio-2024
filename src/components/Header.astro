---
const isIndex = Astro.url.pathname === '/';
import Navbar from './Navbar.astro';
---

<script>
  /* funcion para el comportamiento del header segun este en el index o no */
  const headerCSS: any = document.querySelector('#Header')?.classList;
  const headerClasses = () => {
    document.addEventListener('scroll', () => {
      let altura: number = window.scrollY;

      if (headerCSS.contains('Header--home')) {
        if (altura >= 0 && altura < 730) {
          headerCSS.add('Header--big');
        } else {
          headerCSS.remove('Header--big');
        }
      } else {
        if (altura >= 250) {
          headerCSS.add('Header--big');
        } else {
          headerCSS.remove('Header--big');
        }
      }
    });
  };

  headerClasses();
</script>

<header
  id='Header'
  class:list={['Header Header--big', { 'Header--home': isIndex }]}
>
  <div
    class='Header__content container mx-auto px-4 flex items-center justify-end'>
    <div class="Header__logo-content">
      <a href='/' class='Header__logo'>
        <img
          class='Header__logo-img'
          src='/assets/logo-so.svg'
          alt='logo Sebaolate'
        />
      </a>

      <span class="logo__decoration-1"></span>
      <span class="logo__decoration-2"></span>
      <div class="column-decoration">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>

    <Navbar />
  </div>
</header>

<style lang='scss'>
  .Header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 10;

    /* Glassmorphism */
    &::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      -webkit-backdrop-filter: blur(10px);
      backdrop-filter: blur(10px);
      z-index: -1;
      //border-top: 2px solid var(--color-main-1);
      border-bottom: 2px solid var(--color-main-1);
      transition: 0.35s;
    }
    &::after{
      content: '////////////';
      display: block;
      position: absolute;
      width: 20px;
      height: 16px;
      left: 124px;
      bottom: -18px;
      font-size: 12px;
      color: var(--color-main-1);
      transform: skewX(-42deg) translateX(0px);
      font-weight: bold;
      letter-spacing: 3px;
      transition: 0.35s;
    }

    &__content {
      height: 82px;
      transition: 0.35s;
    }

    &__logo-content{
      position: absolute;
      top: 0;
      left: 0;

      .logo__decoration-1{
        position: absolute;
        top: 0px;
        left: 130px;
        background-color: var(--color-main-1);
        width: 25px;
        height: 30px;
        clip-path: polygon(0 0, 100% 0, 46% 100%, 0% 100%);
      }
      .logo__decoration-2{
        position: absolute;
        bottom: -120px;
        left: 0;
        background-color: var(--color-main-1);
        width: 20px;
        height: 20px;
        clip-path: polygon(0 0, 100% 0, 34% 100%, 0% 100%);
        transform: translateY(0px);
        transition: 0.35s;
      }
      .column-decoration {
        position: absolute;
        top: 0;
        left: 0;
        width: fit-content;
        height: 82px;
        display: none;
        padding-bottom: 5px;
        gap: 6px;
        z-index: -1;
        transform: translateX(55px);
        transition: 0.35s;
      }
      .bar {
        width: 25px;
        height: 74px;
        background-color: var(--color-main-1);
        transform: skewX(-20deg);

        &:nth-last-child(1){
          height: 50px;
          margin-left: 6px;
          background-color: transparent;
          border: 2px solid var(--color-main-1);
        }
        &:nth-last-child(2){
          background-color: transparent;
          border: 2px solid var(--color-main-1);
        }
      }
    }

    &__logo {
      display: flex;
      background-color: var(--color-main-1);
      padding: 16px;
      clip-path: polygon(0% 0%, 100% 0, 100% 82%, 80% 100%, 0% 100%);
      position: absolute;
      width: 130px;
      height: 100px;
      top: 0;
      left: 0;
      transition: 0.35s;

      &-img {
        display: block;
      }
    }

    @media screen and (width >= 900px){
      &__logo-content{
        .logo__decoration-1{
          display: none;
        }
        .column-decoration {
          display: flex;
          transform: translateX(55px);
          transition: 0.35s;
        }
      }
    }

    @media screen and (width >= 1024px) {
      &__logo-content{
        .column-decoration {
          transform: translateX(117px);
        }
      }
      &--big {
        &::before {
          //width: 0%;
          transition: 0.35s;
        }
        &::after{
          transform: skewX(-42deg) translateX(-60px);
        }
        .Header__content {
          height: 100px;
          transition: 0.35s;
        }
        .Header__logo {
          width: 190px;
          height: 120px;
          padding: 30px;
          transition: 0.35s;
        }
        .Header__logo-content{
          .logo__decoration-2{
            transform: translateY(20px);
          }
          .column-decoration {
            transform: translateX(176px);
          }
        }
      }
    }
    @media screen and (width >= 1920px) {
      &--big {
        .Header__content {
          height: 115px;
          transition: 0.35s;
        }
        .Header__logo {
          width: 240px;
          height: 150px;
          padding: 38px;
          transition: 0.35s;
          clip-path: polygon(0% 0%,100% 0,100% calc(100% - 35px),calc(100% - 55px) 100%,0% 100%);
        }
        .Header__logo-content{
          .logo__decoration-2{
            transform: translateY(80px);
            width: 50px;
            height: 50px;
          }
          .column-decoration {
            transform: translateX(226px);
          }
        }
      }
    }
  }
</style>